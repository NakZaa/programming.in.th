@require './config'

html,
body
    scroll-behavior smooth

#dashboard
    display block
    width 100%
    max-width 1280px + $sidebar-width
    min-height 100vh
    position relative
    padding 20px 40px 20px $sidebar-width + 20px

    & > .overlay
        position fixed
        z-index 14
        top 0
        left 0
        display none
        width 100%
        height 100vh
        background-color rgba(0,0,0,.5)

    @media screen and (max-width $sidebar-break-point)
        &
            padding 70px 5% 20px 5%

        & > .overlay
            display block